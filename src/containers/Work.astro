---
import WorkCard from "../components/WorkCard.astro";
import SectionHeading from "../components/SectionHeading.astro";
import RentalManagementSystem from "../assets/Rental_Management_System.png";
import BusinessPortfolioClient from "../assets/Business_Portfolio_Client.png";
import PersonalPortfolioClient from "../assets/Personal_Portfolio_Client.png";
---

<article id="projects" class="relative w-full py-16 bg-slate-100">
  <SectionHeading subTitle="projects" title="featured work" />
  <section
    class="grid phone:grid-cols-1 tablet:grid-cols-2 laptop:grid-cols-4 gap-5 p-4 place-items-center px-5 tablet:px-10 laptop:px-15"
  >
    <WorkCard
      status="version 3.0"
      demo="https://www.youtube.com/watch?v=48TyOVP1UFY"
      link="https://hakikishamalipo.com/"
      tags={["nextJS", "mongodb ", "tailwindcss"]}
      image={RentalManagementSystem}
      name="Hakikisha Malipo"
      description="A property management solution meant to streamline the internal operations of rentals eg hostels & apartments."
    />
    <WorkCard
      status="version 1.0"
      demo="https://www.linkedin.com/posts/alfred-gichia_finally-got-to-release-a-business-content-activity-7173183978399625217-8JeH?utm_source=share&utm_medium=member_android"
      link="https://diycustomskenya.vercel.app/"
      tags={["nextJS", "mongodb ", "tailwindcss"]}
      image={BusinessPortfolioClient}
      name="DIY Customs"
      description="A carpenter's portfolio used to showcase best  woodworks and linked to a content management system for easier customization as illustrated in demo "
    />
    <WorkCard
      status="version 1.0"
      link="https://austinkaburia.vercel.app/"
      demo="https://www.linkedin.com/posts/alfred-gichia_thrilled-to-release-a-personal-portfolio-activity-7173183399480815616-j8-2?utm_source=share&utm_medium=member_android"
      tags={["nextJS", "mongodb ", "tailwindcss"]}
      image={PersonalPortfolioClient}
      name="Personal Portfolios"
      description="Utilized to showcase best works and which can be customized from a custom CMS as illustrated in demo"
    />
  </section>
  <div class="custom-shape-divider-bottom-1694798741">
    <svg
      data-name="Layer 1"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1200 120"
      preserveAspectRatio="none"
    >
      <path
        d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
        class="shape-fill"></path>
    </svg>
  </div>
</article>

<style>
  .custom-shape-divider-bottom-1694798741 {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }

  .custom-shape-divider-bottom-1694798741 svg {
    position: relative;
    display: block;
    width: calc(119% + 1.3px);
    height: 55px;
  }

  .custom-shape-divider-bottom-1694798741 .shape-fill {
    fill: #f1f5f9;
  }
</style>
