---
import { Image } from 'astro:assets';
interface Props {
    image:any,
    heading:string,
    body:string,
}
const {image,heading,body}=Astro.props;

---
<article class="service section_hidden rounded-lg aspect-square w-full h-full flex flex-col items-center justify-start bg-tranparent gap-3 ">
    <Image src={image} alt="Alternative image"  class=" rounded-lg shadow-xl shadow-slate-400 w-full h-60"/>
<figcaption class=" flex flex-col justify-start items-center  gap-2 py-2">
    <h3 class="text-center text-lg font-bold ">{heading}</h3>
    <p class="text-center">{body}</p>
</figcaption>
</article>