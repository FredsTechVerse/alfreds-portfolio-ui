---
interface Props {
    icon:any;
    name:string;
}
import {Image} from "astro:assets"
const {icon,name}=Astro.props
---

<section class="w-full h-full rounded-2xl  flex flex-col gap-1 items-center justify-center px-4">
    <Image src={icon} alt="Alternative image"  class="rounded-lg w-12 first-letter:tablet:w-16  aspect-square"/>
    <figcaption class=" text-center text-md capitalize w-full">{name}</p>
</section>